<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/composable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Composable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flowable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="flwable"
        app:layout_constraintLeft_toRightOf="@id/composable"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/completable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="completable"
        app:layout_constraintLeft_toRightOf="@id/flowable"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="map"
        app:layout_constraintLeft_toLeftOf="@id/composable"
        app:layout_constraintRight_toRightOf="@id/composable"
        app:layout_constraintTop_toBottomOf="@id/composable" />

    <Button
        android:id="@+id/zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="zip"
        app:layout_constraintEnd_toEndOf="@+id/flowable"
        app:layout_constraintLeft_toRightOf="@id/map"
        app:layout_constraintStart_toStartOf="@+id/flowable"
        app:layout_constraintTop_toBottomOf="@id/flowable" />

    <Button
        android:id="@+id/buffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="buffer"
        app:layout_constraintEnd_toEndOf="@+id/completable"
        app:layout_constraintStart_toStartOf="@+id/completable"
        app:layout_constraintTop_toBottomOf="@+id/completable" />
    <Button
        android:id="@+id/take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="take"
        app:layout_constraintEnd_toEndOf="@+id/map"
        app:layout_constraintStart_toStartOf="@+id/map"
        app:layout_constraintTop_toBottomOf="@+id/map" />


</androidx.constraintlayout.widget.ConstraintLayout>